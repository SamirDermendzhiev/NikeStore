@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/Resources/Register.css">
}
<section id="login">
    <div class="loginbox">
        <img src="/Resources/Profile.png" class="avatar">
        <h1>Sign up</h1>
        <form action="/Home/Register" method="post">
            <p>Username</p>
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter Username" })
            @Html.ValidationMessageFor(m => m.Username) <br />

            <p>Password</p>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password" })
            @Html.ValidationMessageFor(m => m.Password) <br />

            <p>Confirm Password</p>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword) <br />

            <p>Email</p>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email" })
            @Html.ValidationMessageFor(m => m.Email) <br />

            <p>First Name</p>
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Enter First Name" })
            @Html.ValidationMessageFor(m => m.FirstName) <br />

            <p>Last Name</p>
            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Enter Last Name" })
            @Html.ValidationMessageFor(m => m.LastName) <br />

            <p>Address</p>
            @Html.TextBoxFor(m => m.Address, new { placeholder = "Enter Addres" })
            @Html.ValidationMessageFor(m => m.Address) <br />

            <p>Phone number</p>
            @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Enter Phone Number" })
            @Html.ValidationMessageFor(m => m.PhoneNumber)

            <input type="submit" name="" value="Confirm">
        </form>
    </div>
</section>